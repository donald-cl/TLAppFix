<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
		<EditText android:id="@+id/gotoPageEditText"
			android:layout_width="50sp" android:layout_height="wrap_content"
			android:hint="" android:singleLine="true" />
		<Button android:id="@+id/gotoPageButton" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Okay"
			android:layout_toRightOf="@+id/gotoPageEditText" />
		<Button android:id="@+id/gotoPageCancelButton"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Cancel" android:layout_toRightOf="@+id/gotoPageButton" />
	</LinearLayout>
</RelativeLayout>
